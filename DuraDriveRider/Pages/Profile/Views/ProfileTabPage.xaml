<?xml version="1.0" encoding="utf-8" ?>
<Pages:BaseContentPage
    x:Class="DuraDriveRider.Pages.Profile.Views.ProfileTabPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Pages="clr-namespace:DuraDriveRider.Infrastructure"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">
    <ContentPage.Content>
        <Grid RowDefinitions="60,Auto,*">
            <yummy:PancakeView
                Padding="10,20"
                BackgroundColor="#211E66"
                CornerRadius="0,0,10,10">
                <Grid VerticalOptions="CenterAndExpand">
                    <StackLayout Orientation="Horizontal">
                        <Image
                            HeightRequest="20"
                            HorizontalOptions="Start"
                            Rotation="180"
                            Source="backarrowwhite"
                            WidthRequest="20" />
                        <Label FontSize="16" Text="Back" />
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding BackCommand}" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                    <StackLayout HorizontalOptions="CenterAndExpand">
                        <Label
                            FontSize="16"
                            HorizontalTextAlignment="Center"
                            Text="My Profile"
                            TextType="Text" />
                    </StackLayout>
                    <ImageButton
                        Margin="0,0,10,0"
                        Command="{Binding PasswordChangeCommand}"
                        HeightRequest="22"
                        HorizontalOptions="EndAndExpand"
                        Source="password_changed"
                        WidthRequest="22" />
                </Grid>
            </yummy:PancakeView>

            <Frame
                Grid.Row="1"
                Margin="20,20,20,0"
                Padding="0"
                BackgroundColor="#EBE9FF"
                CornerRadius="5"
                VerticalOptions="StartAndExpand">
                <Grid ColumnSpacing="0" VerticalOptions="CenterAndExpand">
                    <Frame
                        BackgroundColor="{Binding PersonalDetailsBoxviewColor}"
                        BorderColor="{Binding PersonalDetailsBoxviewColor}"
                        CornerRadius="5">
                        <Label
                            Margin="0,4"
                            HorizontalOptions="CenterAndExpand"
                            Text="Dura Express"
                            TextColor="{Binding PersonalDetailsTextColor}" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Tab1Command}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                    <Frame
                        Grid.Column="1"
                        BackgroundColor="{Binding OfficalDetailsBoxviewColor}"
                        BorderColor="{Binding OfficalDetailsBoxviewColor}"
                        CornerRadius="5">
                        <Label
                            Margin="0,4"
                            HorizontalOptions="CenterAndExpand"
                            Text="Dura Shops"
                            TextColor="{Binding OfficalDetailsTextColor}" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Tab2Command}" />
                        </Frame.GestureRecognizers>
                    </Frame>

                    <Frame
                        Grid.Column="2"
                        BackgroundColor="{Binding PaymentDetailsBoxviewColor}"
                        BorderColor="{Binding PaymentDetailsBoxviewColor}"
                        CornerRadius="5">
                        <Label
                            Margin="0,4"
                            HorizontalOptions="CenterAndExpand"
                            Text="Dura Eats"
                            TextColor="{Binding PaymentDetailsTextColor}"
                            VerticalOptions="CenterAndExpand" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Tab3Command}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </Grid>
            </Frame>

            <ScrollView Grid.Row="2" Margin="20">
                <StackLayout>
                    <StackLayout IsVisible="{Binding PersonalDetailsIsVisible}" Spacing="20">
                        <xct:AvatarView
                            HorizontalOptions="CenterAndExpand"
                            Size="120"
                            Source="photo_placeholder"
                            Style="{StaticResource AvatarViewStyle}" />
                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry Placeholder="John" TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                        </Grid>

                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry Placeholder="Middle Name" TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                        </Grid>

                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry Placeholder="Doe" TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                        </Grid>

                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry Placeholder="+631234556780" TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                        </Grid>

                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry Placeholder="doejdofha@gmail.com" TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                        </Grid>

                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry Placeholder="19 Mar 1990" TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                        </Grid>

                        <Label
                            FontFamily="ProximaNovaBold"
                            FontSize="16"
                            Text="Social Account"
                            TextColor="#C7C6D8" />

                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry Placeholder="Facebook" TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                            <Label
                                FontSize="16"
                                HorizontalOptions="EndAndExpand"
                                Opacity=".8"
                                Text="Linked"
                                TextColor="Black" />
                        </Grid>

                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry Placeholder="Google" TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                            <Image
                                Margin="0,0,10,0"
                                HeightRequest="20"
                                HorizontalOptions="EndAndExpand"
                                Source="link"
                                WidthRequest="20" />
                        </Grid>

                        <Label
                            FontFamily="ProximaNovaBold"
                            FontSize="16"
                            Text="Social Details"
                            TextColor="#C7C6D8" />

                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry
                                FontAttributes="Bold"
                                FontSize="16"
                                Placeholder="5646464654546"
                                TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                        </Grid>

                        <Button Command="{Binding EditCommand}" Text="Edit" />
                    </StackLayout>

                    <StackLayout IsVisible="{Binding SaveDetailsIsVisible}" Spacing="10">
                        <Grid
                            Margin="0,0,0,8"
                            HorizontalOptions="CenterAndExpand"
                            WidthRequest="155">
                            <Grid>
                                <xct:AvatarView
                                    BorderColor="#EBE9FF"
                                    HorizontalOptions="Center"
                                    Size="120"
                                    Source="photo_placeholder.png"
                                    Text="User Name"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    Color="#EBE9FF" />
                            </Grid>
                            <Image
                                Margin="0,0,8,8"
                                HeightRequest="35"
                                HorizontalOptions="EndAndExpand"
                                Source="camera.png"
                                VerticalOptions="EndAndExpand"
                                WidthRequest="35" />
                        </Grid>

                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry
                                Placeholder="John"
                                PlaceholderColor="Gray"
                                TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                        </Grid>

                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry Placeholder="Middle Name" TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                        </Grid>

                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry Placeholder="Doe" TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                        </Grid>

                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry Placeholder="+631234556780" TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                            <Image
                                HeightRequest="15"
                                HorizontalOptions="EndAndExpand"
                                Source="verified_data.png"
                                WidthRequest="15" />
                        </Grid>
                        <Grid VerticalOptions="CenterAndExpand">
                            <Entry Placeholder="doejdofha@gmail.com" TextColor="Black">
                                <Entry.Effects>
                                    <xct:RemoveBorderEffect />
                                </Entry.Effects>
                            </Entry>
                            <BoxView VerticalOptions="EndAndExpand" />
                            <Image
                                HeightRequest="15"
                                HorizontalOptions="EndAndExpand"
                                Source="verified_data.png"
                                WidthRequest="15" />
                        </Grid>
                        <Grid VerticalOptions="CenterAndExpand">
                            <DatePicker
                                Date="12 Mar 1990"
                                Format="dd/MM/yyyy"
                                TextColor="Black">
                                <DatePicker.Effects>
                                    <xct:RemoveBorderEffect />
                                </DatePicker.Effects>
                            </DatePicker>
                            <BoxView VerticalOptions="EndAndExpand" />
                            <Image
                                HeightRequest="20"
                                HorizontalOptions="EndAndExpand"
                                Source="calender.png"
                                WidthRequest="20" />
                        </Grid>

                        <Button
                            Margin="5,30,5,5"
                            Command="{Binding SaveCommand}"
                            Text="Save" />
                    </StackLayout>


                    <StackLayout IsVisible="{Binding OfficialDetailsIsVisible}">
                        <StackLayout Spacing="10">
                            <Grid VerticalOptions="CenterAndExpand">
                                <Entry
                                    FontFamily="ProximaNovaRegular"
                                    FontSize="18"
                                    Keyboard="Numeric"
                                    Placeholder="490349784097854"
                                    PlaceholderColor="#000000">
                                    <Entry.Effects>
                                        <xct:RemoveBorderEffect />
                                    </Entry.Effects>
                                </Entry>
                                <BoxView VerticalOptions="EndAndExpand" />
                            </Grid>

                            <Grid HeightRequest="100" VerticalOptions="CenterAndExpand">
                                <Image
                                    HorizontalOptions="FillAndExpand"
                                    Source="Doc.png"
                                    VerticalOptions="FillAndExpand" />
                                <Image
                                    Grid.Column="1"
                                    HorizontalOptions="FillAndExpand"
                                    Source="Doc_F.png"
                                    VerticalOptions="FillAndExpand" />

                            </Grid>
                            <Grid>
                                <Entry
                                    FontFamily="ProximaNovaRegular"
                                    FontSize="18"
                                    Keyboard="Numeric"
                                    Placeholder="DAS9047643y4834"
                                    PlaceholderColor="#000000">
                                    <Entry.Effects>
                                        <xct:RemoveBorderEffect />
                                    </Entry.Effects>
                                </Entry>
                                <BoxView VerticalOptions="EndAndExpand" />
                            </Grid>

                            <Image
                                Aspect="Fill"
                                HeightRequest="170"
                                HorizontalOptions="FillAndExpand"
                                Source="Doc_S.png"
                                VerticalOptions="StartAndExpand" />
                            <Grid VerticalOptions="CenterAndExpand">
                                <Entry
                                    FontFamily="ProximaNovaRegular"
                                    FontSize="18"
                                    Keyboard="Numeric"
                                    Placeholder="65468749879434"
                                    PlaceholderColor="#000000">
                                    <Entry.Effects>
                                        <xct:RemoveBorderEffect />
                                    </Entry.Effects>
                                </Entry>
                                <BoxView VerticalOptions="EndAndExpand" />
                            </Grid>
                            <Image
                                Aspect="Fill"
                                HeightRequest="170"
                                HorizontalOptions="FillAndExpand"
                                Source="Doc_T.png"
                                VerticalOptions="StartAndExpand" />

                            <Label
                                Margin="0,10,0,0"
                                FontFamily="ProximaNovaBold"
                                FontSize="16"
                                HorizontalOptions="StartAndExpand"
                                Text="Picture of unit/vehicle"
                                TextColor="#C7C6D8" />

                            <Grid Margin="0,0,0,10" InputTransparent="False">
                                <Picker
                                    Title="Select bike"
                                    ItemDisplayBinding="{Binding Name}"
                                    ItemsSource="{Binding VehicleList}"
                                    SelectedItem="{Binding VehicleSelected}"
                                    TextColor="Black"
                                    TitleColor="Black"
                                    VerticalOptions="CenterAndExpand">
                                    <Picker.Effects>
                                        <xct:RemoveBorderEffect />
                                    </Picker.Effects>
                                </Picker>
                                <Image
                                    Margin="0,0,10,0"
                                    HeightRequest="15"
                                    HorizontalOptions="EndAndExpand"
                                    InputTransparent="True"
                                    Source="filled_dropdown"
                                    VerticalOptions="Center"
                                    WidthRequest="15" />
                                <BoxView VerticalOptions="EndAndExpand" />

                            </Grid>

                            <Image
                                Aspect="Fill"
                                HeightRequest="170"
                                HorizontalOptions="FillAndExpand"
                                Source="Bike.png"
                                VerticalOptions="StartAndExpand" />

                            <Button
                                Margin="10,15,10,5"
                                Command="{Binding EditDocumentCommand}"
                                Text="{Binding EditBtn}" />
                        </StackLayout>

                    </StackLayout>

                    <StackLayout IsVisible="{Binding PaymentDetailsIsVisible}">
                        <Frame
                            Margin="0,0,0,20"
                            BackgroundColor="#EBE9FF"
                            CornerRadius="5">
                            <StackLayout>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="XYZ Bank"
                                    TextColor="Black" />
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="43453450344232432"
                                    TextColor="Black" />
                            </StackLayout>
                        </Frame>

                        <Button
                            BackgroundColor="Transparent"
                            BorderColor="#211E66"
                            Command="{Binding AddAnotherBankCommand}"
                            FontAttributes="Bold"
                            FontFamily=""
                            Text="Add Another Bank"
                            TextColor="#211E66" />
                    </StackLayout>
                </StackLayout>
            </ScrollView>

        </Grid>



    </ContentPage.Content>
</Pages:BaseContentPage>