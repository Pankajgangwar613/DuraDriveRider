<?xml version="1.0" encoding="utf-8" ?>
<Pages:BaseContentPage  xmlns:Pages="clr-namespace:DuraDriveRider.Infrastructure" xmlns="http://xamarin.com/schemas/2014/forms" BackgroundColor="DarkBlue" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:Yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="DuraDriveRider.Pages.Auth.Views.ForgotPasswordPage">
    <StackLayout>
        <Grid>  
                <Image   HeightRequest="200" WidthRequest="150" Source="logo_white.png" Margin="0,70,0,0"/>
            
            <StackLayout Margin="0,470,0,0" VerticalOptions="Fill" HorizontalOptions="FillAndExpand">
                <Yummy:PancakeView HeightRequest="350">
                    <StackLayout Margin="10" >
                        <Label Text="Forgot Password " TextColor="Black" FontSize="Medium" FontAttributes="Bold"/>

                        <StackLayout>
                            <Entry Text="" Placeholder="Enter Registered Mobile Number" FontSize="10" Margin="0,20,0,0"/>

                        </StackLayout>

                        <Button Text="Get OTP"  Margin="0,50,0,0" Command="{Binding GetOtpCommand}"/>

                    </StackLayout>
                </Yummy:PancakeView>


            </StackLayout>

        </Grid>

    </StackLayout>

</Pages:BaseContentPage>