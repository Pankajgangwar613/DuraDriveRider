<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:Yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Class="DuraDriveRider.Pages.Auth.Views.LoginPage">
    <StackLayout>
        <Grid>

            <StackLayout>

                <Frame BackgroundColor="DarkBlue"  HeightRequest="300" HorizontalOptions="FillAndExpand"/>

            </StackLayout>
            <StackLayout>
                <Image HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="200" WidthRequest="150" Source="logo_white.png"/>
            </StackLayout>
            <StackLayout Margin="0,270,0,0">
                <Yummy:PancakeView CornerRadius="25,25,25,25" Padding="20" BackgroundColor="White" HeightRequest="550" HorizontalOptions="FillAndExpand">
                    <StackLayout Margin="10" >
                        <Label Text="Login to access your account " TextColor="Black" FontSize="Medium" FontAttributes="Bold"/>

                        <StackLayout>
                            <Entry Text="" Placeholder=""/>
                            <Entry Text="" Placeholder=""/>
                            <Entry Text="" Placeholder="Enter Password" FontSize="12"/>
                        </StackLayout>
                        <Picker Title="Forgot Password?" TitleColor="DarkBlue" FontSize="8" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,0,0,0"/>
                        <Button Text="Login"  Command="{Binding LoginCommand}"  BackgroundColor="DarkBlue" TextColor="White" Margin="0,20,0,0" CornerRadius="5"/>
                        <Label Text="Want to be a rider?" TextColor="DarkBlue" FontSize="8" VerticalTextAlignment="End" HorizontalOptions="CenterAndExpand" Margin="0,50,40,0"/>
                        <Picker Title="Register here" TitleColor="DarkBlue" FontSize="8" FontAttributes="Bold" VerticalOptions="End" HorizontalOptions="EndAndExpand" Margin="0,-68,100,10"/>
                    </StackLayout>
                </Yummy:PancakeView>


            </StackLayout>

        </Grid>

    </StackLayout>
</ContentPage>