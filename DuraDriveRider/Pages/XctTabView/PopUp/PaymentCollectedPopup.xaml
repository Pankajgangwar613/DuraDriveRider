<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup xmlns="http://xamarin.com/schemas/2014/forms" xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DuraDriveRider.Pages.XctTabView.PopUp.PaymentCollectedPopup">
    <StackLayout>
        <Frame  Margin="30,0"
            VerticalOptions="CenterAndExpand">
            <StackLayout>
                <StackLayout Spacing="15">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="ProximaNovaSemibold"
                        FontSize="20"
                        HorizontalOptions="CenterAndExpand"
                        HorizontalTextAlignment="Center"
                        Text="Payment Collected?"
                        TextColor="#D72625" />
                    <Label
                        FontSize="15"
                        HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"
                        Text="Make sure amount of ₱ 500 you collet and deliver the items()"
                        TextColor="Black" />
                </StackLayout>
                <Button Margin="0,15,0,10" x:Name="ConfirmDelivery" Clicked="ConfirmDelivery_Clicked"  Text="Confirm Delivery"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</xct:Popup>