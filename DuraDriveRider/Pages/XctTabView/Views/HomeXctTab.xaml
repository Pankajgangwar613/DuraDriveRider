<?xml version="1.0" encoding="utf-8" ?>
<Pages:BaseContentPage
    x:Class="DuraDriveRider.Pages.XctTabView.Views.HomeXctTab"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Pages="clr-namespace:DuraDriveRider.Infrastructure"
    xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    x:Name="thispage">
    <Pages:BaseContentPage.Resources>
        <ResourceDictionary>
            <xct:StateToBooleanConverter x:Key="StateToBooleanConverter" />

            <DataTemplate x:Key="error_template">
                <Label
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="Something went horribly wrong!"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center" />
            </DataTemplate>
            <Style x:Key="ActiveIndicator" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#978348" />
            </Style>
            <Style x:Key="InactiveIndicator" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderColor" Value="#777B7C" />
            </Style>
        </ResourceDictionary>
    </Pages:BaseContentPage.Resources>
    <xct:TabView
        x:Name="MyTabView"
        xct:SafeAreaEffect.SafeArea="true"
        IsSwipeEnabled="False"
        TabStripBackgroundColor="WhiteSmoke"
        TabStripPlacement="Bottom">
        <xct:TabViewItem
            x:Name="Home"
            Icon="home"
            IconSelected="home_active"
            Style="{StaticResource XctTabViewStyle}"
            Text="Home"
            VerticalOptions="EndAndExpand">
            <xct:TabViewItem.Content>
                <ScrollView VerticalScrollBarVisibility="Never">
                    <StackLayout Padding="20" VerticalOptions="StartAndExpand">
                        <Label
                            FontSize="44"
                            Text="Home"
                            TextColor="Red"
                            TextTransform="None"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>
                </ScrollView>

            </xct:TabViewItem.Content>
        </xct:TabViewItem>

        <!--  Order  -->
        <xct:TabViewItem
            x:Name="Order"
            Icon="order"
            IconSelected="order_active"
            Style="{StaticResource XctTabViewStyle}"
            Text="Order"
            VerticalOptions="EndAndExpand">
            <xct:TabViewItem.Content>
                <Grid RowDefinitions="120,*">
                    <yummy:PancakeView
                        BackgroundColor="#211E66"
                        CornerRadius="0,0,10,10"
                        HeightRequest="95"
                        VerticalOptions="StartAndExpand">
                        <Grid Margin="15,10">
                            <Grid InputTransparent="False">
                                <Picker
                                    Title="Hi, John"
                                    ItemDisplayBinding="{Binding .}"
                                    ItemsSource="{Binding ProfileNameList}"
                                    SelectedItem="{Binding ProfileSelected}"
                                    TextColor="White"
                                    TitleColor="White"
                                    VerticalOptions="CenterAndExpand">
                                    <Picker.Effects>
                                        <xct:RemoveBorderEffect />
                                    </Picker.Effects>
                                </Picker>
                                <Image
                                    Margin="10,0,0,0"
                                    HeightRequest="15"
                                    HorizontalOptions="CenterAndExpand"
                                    InputTransparent="True"
                                    Rotation="90"
                                    Source="backarrowwhite"
                                    VerticalOptions="Center"
                                    WidthRequest="15" />
                            </Grid>
                            <StackLayout
                                Grid.Column="1"
                                HorizontalOptions="EndAndExpand"
                                Orientation="Horizontal">
                                <Image
                                    Margin="10,0"
                                    HeightRequest="22"
                                    HorizontalOptions="Center"
                                    InputTransparent="True"
                                    Source="help"
                                    VerticalOptions="Center"
                                    WidthRequest="22" />
                                <Image
                                    HeightRequest="22"
                                    HorizontalOptions="Center"
                                    InputTransparent="True"
                                    Source="notification"
                                    VerticalOptions="Center"
                                    WidthRequest="22" />
                            </StackLayout>
                        </Grid>
                    </yummy:PancakeView>

                    <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
                        <StackLayout Padding="15,15,15,0">
                            <StackLayout Padding="0,10" Orientation="Horizontal">
                                <Label
                                    FontFamily="ProximaNovaRegular"
                                    FontSize="22"
                                    Text="Orders"
                                    TextColor="#000000" />

                                <Frame
                                    Padding="10,0"
                                    BackgroundColor="#211E66"
                                    BorderColor="#211E66"
                                    CornerRadius="5"
                                    HeightRequest="35"
                                    HorizontalOptions="EndAndExpand"
                                    WidthRequest="90">
                                    <Grid InputTransparent="False">
                                        <Picker
                                            Title="Days"
                                            FontFamily="ProximaNovaRegular"
                                            ItemDisplayBinding="{Binding .}"
                                            ItemsSource="{Binding DaysList}"
                                            SelectedItem="{Binding DaysSelected}"
                                            TextColor="White"
                                            TitleColor="White">
                                            <Picker.Effects>
                                                <xct:RemoveBorderEffect />
                                            </Picker.Effects>
                                        </Picker>
                                        <Image
                                            HeightRequest="20"
                                            HorizontalOptions="EndAndExpand"
                                            InputTransparent="True"
                                            Source="filled_dropdownwhite"
                                            VerticalOptions="Center"
                                            WidthRequest="20" />
                                    </Grid>
                                </Frame>
                            </StackLayout>

                            <Frame
