                                            FontFamily="ProximaNovaRegular"
                                            ItemDisplayBinding="{Binding .}"
                                            ItemsSource="{Binding DaysList}"
                                            SelectedItem="{Binding DaysSelected}"
                                            TextColor="White"
                                            TitleColor="White">
                                            <Picker.Effects>
                                                <xct:RemoveBorderEffect />
                                            </Picker.Effects>
                                        </Picker>
                                        <Image
                                            HeightRequest="20"
                                            HorizontalOptions="EndAndExpand"
                                            InputTransparent="True"
                                            Source="filled_dropdownwhite"
                                            VerticalOptions="Center"
                                            WidthRequest="20" />
                                    </Grid>
                                </Frame>
                            </StackLayout>

                            <Frame
                                Padding="0"
                                BackgroundColor="#EBE9FF"
                                CornerRadius="5"
                                VerticalOptions="StartAndExpand">
                                <Grid
                                    Grid.Row="2"
                                    ColumnSpacing="0"
                                    VerticalOptions="CenterAndExpand">
                                    <Frame
                                        BackgroundColor="{Binding PersonalDetailsBoxviewColor}"
                                        BorderColor="{Binding PersonalDetailsBoxviewColor}"
                                        CornerRadius="5">
                                        <Label
                                            Margin="0,4"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="Dura Express"
                                            TextColor="{Binding PersonalDetailsTextColor}" />
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding PersonalDetailsCommand}" />
                                        </Frame.GestureRecognizers>
                                    </Frame>
                                    <Frame
                                        Grid.Column="1"
                                        BackgroundColor="{Binding OfficalDetailsBoxviewColor}"
                                        BorderColor="{Binding OfficalDetailsBoxviewColor}"
                                        CornerRadius="5">
                                        <Label
                                            Margin="0,4"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="Dura Shops"
                                            TextColor="{Binding OfficalDetailsTextColor}" />
