                                            VerticalOptions="CenterAndExpand" />
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding PaymentDetailsCommand}" />
                                        </Frame.GestureRecognizers>
                                    </Frame>
                                </Grid>
                            </Frame>

