                                                        CornerRadius="0,0,12,0"
                                                        HorizontalOptions="EndAndExpand">
                                                        <Label
                                                            FontFamily="ProximaNovaRegular"
                                                            FontSize="14"
                                                            HorizontalOptions="CenterAndExpand"
                                                            Text="{Binding Status}"
                                                            TextColor="{Binding StatusTextColor}"
                                                            VerticalOptions="CenterAndExpand" />
                                                    </yummy:PancakeView>

                                                </Grid>
                                                <StackLayout Orientation="Horizontal">
                                                    <StackLayout Spacing="0">
                                                        <xct:AvatarView
                                                            HorizontalOptions="Start"
                                                            Size="10"
                                                            TextColor="Transparent"
                                                            VerticalOptions="Center"
                                                            Color="#6EB76C" />
                                                        <BoxView
                                                            Margin="4,0"
                                                            HorizontalOptions="Start"
                                                            VerticalOptions="FillAndExpand"
                                                            WidthRequest="2" />

                                                        <xct:AvatarView
                                                            HorizontalOptions="Start"
                                                            Size="10"
                                                            TextColor="Transparent"
                                                            VerticalOptions="Center"
                                                            Color="#F67A7A" />
                                                    </StackLayout>
                                                    <StackLayout Spacing="5">
                                                        <StackLayout Orientation="Horizontal">
                                                            <Label
                                                                Margin="0,0,0,0"
                                                                FontFamily="ProximaNovaRegular"
                                                                FontSize="12"
                                                                HorizontalOptions="Start"
                                                                Text="Pickup"
                                                                TextColor="#000000"
                                                                VerticalOptions="StartAndExpand"
                                                                WidthRequest="60" />
                                                            <Label
                                                                FontFamily="ProximaNovaRegular"
                                                                FontSize="12"
                                                                HorizontalOptions="Start"
                                                                Text="{Binding Address}"
                                                                TextColor="#000000"
                                                                VerticalOptions="StartAndExpand" />
                                                        </StackLayout>
                                                        <StackLayout Orientation="Horizontal">
                                                            <Label
                                                                Margin="0,0,0,0"
                                                                FontFamily="ProximaNovaRegular"
                                                                FontSize="12"
                                                                HorizontalOptions="Start"
                                                                Text="Drop Off"
                                                                TextColor="#000000"
                                                                VerticalOptions="EndAndExpand"
                                                                WidthRequest="60" />
                                                            <Label
                                                                Margin="0,0,0,0"
                                                                FontFamily="ProximaNovaRegular"
                                                                FontSize="12"
                                                                HorizontalOptions="Start"
                                                                Text="{Binding Address}"
                                                                TextColor="#000000"
                                                                VerticalOptions="EndAndExpand"
                                                                VerticalTextAlignment="Center" />
                                                        </StackLayout>

                                                    </StackLayout>
                                                </StackLayout>

                                                <Grid Padding="0,8,0,2">
                                                    <Label
                                                        FontFamily="ProximaNovaBold"
                                                        FontSize="14"
                                                        HorizontalOptions="StartAndExpand"
                                                        Text="{Binding Charges}"
                                                        TextColor="{Binding ChargesTextColor}"
                                                        VerticalOptions="Center" />
                                                    <Label
                                                        Margin="0,0,0,0"
                                                        FontFamily="ProximaNovaRegular"
                                                        FontSize="12"
                                                        HorizontalOptions="EndAndExpand"
                                                        Text="{Binding date}"
                                                        TextColor="#676767" />
                                                </Grid>
                                                <StackLayout.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.EWalletCommand, Source={x:Reference thispage}}" CommandParameter="{Binding .}" />
                                                </StackLayout.GestureRecognizers>
                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <CollectionView
                                Margin="0,10,0,5"
                                IsVisible="{Binding PaymentDetailsIsVisible}"
                                ItemsSource="{Binding DuraOfList}"
                                VerticalOptions="FillAndExpand">
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout Orientation="Vertical" VerticalItemSpacing="20" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame
                                            Padding="10,0,0,8"
                                            HasShadow="True"
                                            VerticalOptions="StartAndExpand">
                                            <StackLayout>
                                                <Grid>
                                                    <StackLayout Orientation="Horizontal">
                                                        <Label
                                                            FontFamily="ProximaNovaRegular"
                                                            FontSize="12"
                                                            Text="Service Type"
                                                            TextColor="#000000"
                                                            VerticalOptions="CenterAndExpand" />

                                                        <Label
                                                            FontFamily="ProximaNovaBold"
                                                            HorizontalOptions="StartAndExpand"
                                                            Text="{Binding Name}"
                                                            TextColor="#000000"
                                                            VerticalOptions="CenterAndExpand" />
                                                    </StackLayout>
                                                    <yummy:PancakeView
                                                        Grid.Column="1"
                                                        Padding="6"
                                                        BackgroundColor="{Binding StatusBgColor}"
                                                        CornerRadius="0,0,12,0"
                                                        HorizontalOptions="EndAndExpand">
                                                        <Label
                                                            FontFamily="ProximaNovaRegular"
                                                            FontSize="14"
                                                            HorizontalOptions="CenterAndExpand"
                                                            Text="{Binding Status}"
                                                            TextColor="{Binding StatusTextColor}"
                                                            VerticalOptions="CenterAndExpand" />
                                                    </yummy:PancakeView>

                                                </Grid>
                                                <StackLayout Orientation="Horizontal">
                                                    <StackLayout Spacing="0">
                                                        <xct:AvatarView
                                                            HorizontalOptions="Start"
                                                            Size="10"
                                                            TextColor="Transparent"
                                                            VerticalOptions="Center"
                                                            Color="#6EB76C" />
                                                        <BoxView
                                                            Margin="4,0"
                                                            HorizontalOptions="Start"
                                                            VerticalOptions="FillAndExpand"
                                                            WidthRequest="2" />

                                                        <xct:AvatarView
                                                            HorizontalOptions="Start"
                                                            Size="10"
                                                            TextColor="Transparent"
                                                            VerticalOptions="Center"
                                                            Color="#F67A7A" />
                                                    </StackLayout>
                                                    <StackLayout Spacing="5">
                                                        <StackLayout Orientation="Horizontal">
                                                            <Label
                                                                Margin="0,0,0,0"
                                                                FontFamily="ProximaNovaRegular"
                                                                FontSize="12"
                                                                HorizontalOptions="Start"
                                                                Text="Pickup"
                                                                TextColor="#000000"
                                                                VerticalOptions="StartAndExpand"
                                                                WidthRequest="60" />
                                                            <Label
                                                                FontFamily="ProximaNovaRegular"
                                                                FontSize="12"
                                                                HorizontalOptions="Start"
                                                                Text="{Binding Address}"
                                                                TextColor="#000000"
                                                                VerticalOptions="StartAndExpand" />
                                                        </StackLayout>
                                                        <StackLayout Orientation="Horizontal">
                                                            <Label
                                                                Margin="0,0,0,0"
                                                                FontFamily="ProximaNovaRegular"
                                                                FontSize="12"
                                                                HorizontalOptions="Start"
                                                                Text="Drop Off"
                                                                TextColor="#000000"
                                                                VerticalOptions="EndAndExpand"
                                                                WidthRequest="60" />
                                                            <Label
                                                                Margin="0,0,0,0"
                                                                FontFamily="ProximaNovaRegular"
                                                                FontSize="12"
                                                                HorizontalOptions="Start"
                                                                Text="{Binding Address}"
                                                                TextColor="#000000"
                                                                VerticalOptions="EndAndExpand"
                                                                VerticalTextAlignment="Center" />
                                                        </StackLayout>

                                                    </StackLayout>
                                                </StackLayout>

                                                <Grid Padding="0,8,0,2">
                                                    <Label
                                                        FontFamily="ProximaNovaBold"
                                                        FontSize="14"
                                                        HorizontalOptions="StartAndExpand"
                                                        Text="{Binding Charges}"
                                                        TextColor="{Binding ChargesTextColor}"
                                                        VerticalOptions="Center" />
                                                    <Label
                                                        Margin="0,0,0,0"
                                                        FontFamily="ProximaNovaRegular"
                                                        FontSize="12"
                                                        HorizontalOptions="EndAndExpand"
                                                        Text="{Binding date}"
                                                        TextColor="#676767" />
                                                </Grid>
                                                <StackLayout.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.EWalletCommand, Source={x:Reference thispage}}" CommandParameter="{Binding .}" />
                                                </StackLayout.GestureRecognizers>
                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </StackLayout>
                    </ScrollView>
                </Grid>
            </xct:TabViewItem.Content>
        </xct:TabViewItem>

        <!--  Wallet  -->
        <xct:TabViewItem
            x:Name="Wallet"
            Icon="wallet"
            IconSelected="wallet_active"
            Style="{StaticResource XctTabViewStyle}"
            Text="E-Wallet"
            VerticalOptions="EndAndExpand">
            <xct:TabViewItem.Content>
                <Grid RowDefinitions="120,*">
                    <yummy:PancakeView
                        BackgroundColor="#211E66"
                        CornerRadius="0,0,10,10"
                        HeightRequest="95"
                        VerticalOptions="StartAndExpand">
                        <Grid Margin="15,10">
                            <Grid InputTransparent="False">
                                <Picker
                                    Title="Hi, John"
                                    ItemDisplayBinding="{Binding .}"
                                    ItemsSource="{Binding ProfileNameList}"
