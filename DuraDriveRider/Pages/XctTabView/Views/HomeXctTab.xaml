                                                                FontSize="12"
                                                                HorizontalOptions="Start"
                                                                Text="{Binding Address}"
                                                                TextColor="#000000"
                                                                VerticalOptions="StartAndExpand" />
                                                        </StackLayout>
                                                        <StackLayout Orientation="Horizontal">
                                                            <Label
                                                                Margin="0,0,0,0"
                                                                FontFamily="ProximaNovaRegular"
                                                                FontSize="12"
                                                                HorizontalOptions="Start"
                                                                Text="Drop Off"
                                                                TextColor="#000000"
                                                                VerticalOptions="EndAndExpand"
                                                                WidthRequest="60" />
                                                            <Label
                                                                Margin="0,0,0,0"
                                                                FontFamily="ProximaNovaRegular"
                                                                FontSize="12"
                                                                HorizontalOptions="Start"
                                                                Text="{Binding Address}"
                                                                TextColor="#000000"
                                                                VerticalOptions="EndAndExpand"
                                                                VerticalTextAlignment="Center" />
                                                        </StackLayout>

                                                    </StackLayout>
                                                </StackLayout>

                                                <Grid Padding="0,8,0,2">
                                                    <Label
                                                        FontFamily="ProximaNovaBold"
                                                        FontSize="14"
                                                        HorizontalOptions="StartAndExpand"
                                                        Text="{Binding Charges}"
                                                        TextColor="{Binding ChargesTextColor}"
                                                        VerticalOptions="Center" />
                                                    <Label
                                                        Margin="0,0,0,0"
                                                        FontFamily="ProximaNovaRegular"
                                                        FontSize="12"
                                                        HorizontalOptions="EndAndExpand"
                                                        Text="{Binding date}"
                                                        TextColor="#676767" />
                                                </Grid>
                                                <StackLayout.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.EWalletCommand, Source={x:Reference thispage}}" CommandParameter="{Binding .}" />
                                                </StackLayout.GestureRecognizers>
                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <CollectionView
                                Margin="0,10,0,5"
                                IsVisible="{Binding OfficialDetailsIsVisible}"
                                ItemsSource="{Binding DuraShopsOfList}"
                                VerticalOptions="FillAndExpand">
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout Orientation="Vertical" VerticalItemSpacing="20" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame
                                            Padding="10,0,0,8"
                                            HasShadow="True"
                                            VerticalOptions="StartAndExpand">
                                            <StackLayout>
                                                <Grid>
                                                    <StackLayout Orientation="Horizontal">
                                                        <Label
                                                            FontFamily="ProximaNovaRegular"
                                                            FontSize="12"
                                                            Text="Service Type"
                                                            TextColor="#000000"
                                                            VerticalOptions="CenterAndExpand" />

                                                        <Label
