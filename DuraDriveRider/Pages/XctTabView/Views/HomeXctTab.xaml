                                        Command="{Binding MaterialMenuButton_MenuSelected}"
                                        CornerRadius="24"
                                        TintColor="Red" />-->
                            </StackLayout>

                            <StackLayout>
                                <CollectionView
                                    Margin="0,5"
                                    ItemsSource="{Binding EWalletOfList}"
                                    VerticalOptions="FillAndExpand">
                                    <CollectionView.ItemsLayout>
                                        <GridItemsLayout Orientation="Vertical" VerticalItemSpacing="20" />
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame
                                                BackgroundColor="#e6e6ff"
                                                BorderColor="#e6e6ff"
                                                CornerRadius="5">
                                                <StackLayout Orientation="Horizontal">
                                                    <StackLayout.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Path=BindingContext.EWalletCommand, Source={x:Reference thispage}}" CommandParameter="{Binding .}" />
                                                    </StackLayout.GestureRecognizers>
                                                    <StackLayout HorizontalOptions="StartAndExpand">
                                                        <Label
                                                            FontFamily="ProximaNovaRegular"
                                                            FontSize="12"
                                                            Text="Order id"
                                                            TextColor="#000000"
                                                            VerticalOptions="CenterAndExpand" />

                                                        <Label
                                                            FontFamily="ProximaNovaBold"
                                                            FontSize="14"
                                                            Text="{Binding TitleName}"
                                                            TextColor="#000000"
                                                            VerticalOptions="CenterAndExpand" />
                                                    </StackLayout>
                                                    <StackLayout Grid.Column="1" HorizontalOptions="EndAndExpand">
                                                        <Label
                                                            FontFamily="ProximaNovaRegular"
                                                            FontSize="12"
                                                            Text="05 Feb 2021"
                                                            TextColor="#000000"
                                                            VerticalOptions="CenterAndExpand" />

                                                        <Label
                                                            FontFamily="ProximaNovaBold"
                                                            FontSize="14"
                                                            Text="₱ 30.00"
                                                            TextColor="#000000"
                                                            VerticalOptions="CenterAndExpand" />
                                                    </StackLayout>
                                                </StackLayout>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>

                        </StackLayout>
                    </ScrollView>
                </Grid>
            </xct:TabViewItem.Content>
        </xct:TabViewItem>

        <!--  Profile  -->
        <xct:TabViewItem
            x:Name="Profile"
            Icon="profile"
            IconSelected="profile_active"
            Style="{StaticResource XctTabViewStyle}"
            Text="Profile"
            VerticalOptions="EndAndExpand">
            <xct:TabViewItem.Content>
                <Grid RowDefinitions="120,*">
                    <Grid>
                        <Grid>
                            <yummy:PancakeView
                                BackgroundColor="#211E66"
                                CornerRadius="0,0,10,10"
                                HeightRequest="95"
                                VerticalOptions="StartAndExpand" />
                            <StackLayout
                                Margin="12,2"
                                HorizontalOptions="StartAndExpand"
                                Orientation="Horizontal"
                                VerticalOptions="EndAndExpand">
                                <xct:AvatarView
                                    FontSize="14"
                                    Size="90"
                                    Source="profile_active"
                                    Text="Profile Name"
                                    TextColor="White"
                                    Color="Gray" />
                                <StackLayout Spacing="2">
                                    <Label
                                        FontSize="18"
                                        HorizontalOptions="Start"
                                        Text="John Doe"
                                        TextColor="White"
                                        VerticalOptions="EndAndExpand" />
                                    <Label
                                        FontSize="16"
                                        HorizontalOptions="Start"
                                        Text="DD94874"
                                        TextColor="White"
                                        VerticalOptions="StartAndExpand" />
                                    <StackLayout Orientation="Horizontal" Spacing="2">
                                        <Image
                                            HeightRequest="14"
                                            HorizontalOptions="Start"
                                            Source="verified"
                                            VerticalOptions="Center"
                                            WidthRequest="14" />
                                        <Label
                                            HorizontalOptions="Start"
                                            Text="Verified"
                                            TextColor="#0BAC00"
                                            VerticalOptions="Center" />

                                    </StackLayout>
                                </StackLayout>


                                <StackLayout
                                    Margin="50,0,0,0"
                                    HorizontalOptions="EndAndExpand"
                                    Orientation="Horizontal"
                                    VerticalOptions="CenterAndExpand">
                                    <Label
                                        HorizontalOptions="Start"
                                        Text="View Profile"
                                        TextColor="White"
                                        VerticalOptions="Center" />
                                    <Image
                                        HeightRequest="15"
                                        HorizontalOptions="Start"
                                        Source="backarrowwhite"
                                        VerticalOptions="Center"
                                        WidthRequest="15" />
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ViewProfileCommand}" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </StackLayout>
                        </Grid>
                    </Grid>
                    <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
                        <StackLayout Padding="20">
                            <CollectionView
                                HeightRequest="150"
                                ItemsSource="{Binding ProfileItems}"
                                VerticalOptions="FillAndExpand">
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout Orientation="Vertical" VerticalItemSpacing="20" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame
                                            BackgroundColor="#EBE9FF"
                                            BorderColor="#EBE9FF"
                                            CornerRadius="5">
                                            <StackLayout Orientation="Horizontal">
                                                <StackLayout.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.ProfileTabCommand, Source={x:Reference thispage}}" CommandParameter="{Binding .}" />
                                                </StackLayout.GestureRecognizers>
                                                <Image
                                                    HeightRequest="20"
                                                    Source="{Binding Images}"
                                                    VerticalOptions="CenterAndExpand"
                                                    WidthRequest="20" />

                                                <Label
                                                    Margin="8,0,0,0"
                                                    FontSize="14"
                                                    Text="{Binding TitleName}"
                                                    TextColor="#3B3B3B"
                                                    VerticalOptions="CenterAndExpand" />
                                                <Image
                                                    HeightRequest="15"
                                                    HorizontalOptions="EndAndExpand"
                                                    Source="backarrowBlue"
                                                    VerticalOptions="CenterAndExpand"
                                                    WidthRequest="15" />

                                            </StackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <StackLayout
                                Padding="0,0,0,30"
                                HorizontalOptions="CenterAndExpand"
                                Orientation="Horizontal">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding LogOutCommand}" />
                                </StackLayout.GestureRecognizers>
                                <Image
                                    HeightRequest="20"
                                    Source="logout"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="20" />

                                <Label
                                    FontSize="15"
                                    Text="Sign Out"
                                    TextColor="#3B3B3B"
                                    VerticalOptions="CenterAndExpand" />

                            </StackLayout>
                        </StackLayout>
                    </ScrollView>
                </Grid>
            </xct:TabViewItem.Content>
        </xct:TabViewItem>

    </xct:TabView>

</Pages:BaseContentPage>